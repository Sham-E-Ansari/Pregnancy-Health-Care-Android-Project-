<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joker.pregnancyhealthcare.EmergencyPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/smsEm1"
            android:background="@drawable/border_shape"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="SMS Emergency number 1"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/smsEm2"
            android:background="@drawable/border_shape"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="SMS Emergency number 2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location is :   "
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_gravity="center_horizontal"
                android:id="@+id/locationText"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearest Hospitals"
            android:background="@drawable/border_shape"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:padding="5dp"
            android:id="@+id/hosBtn"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/hosListTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#000">
        </ListView>
    </LinearLayout>
</LinearLayout>
