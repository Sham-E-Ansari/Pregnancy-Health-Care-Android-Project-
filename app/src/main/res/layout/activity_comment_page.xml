<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joker.pregnancyhealthcare.CommentPage"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/addComBtn"
        android:text="Add Comment"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_shape"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:minHeight="100dp"
        android:id="@+id/cpostTV"
        android:background="@drawable/border_shape_gray"/>

    <ListView
        android:id="@+id/commentListTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="#000"></ListView>



</LinearLayout>
